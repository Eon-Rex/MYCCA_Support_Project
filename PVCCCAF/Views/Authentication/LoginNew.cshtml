    @Html.Raw(ViewBag.div)
    <script type="text/javascript">
	$(document).ready(function(){
		$('.demo-popup').on('click', function(){
			$('.demo-overlay').fadeIn('500');
					});
					$('.remove2').on('click', function(){
			$('.demo-overlay').fadeOut('500');
		});
			$('.cancel-demo').on('click', function(){
			$('.demo-overlay').fadeOut('500');
		});
	});
    </script>
     
</body>

</html>
